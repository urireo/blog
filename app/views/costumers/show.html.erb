<p>
  <strong>First name:</strong>
  <%= @costumer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @costumer.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @costumer.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @costumer.email %>
</p>


<% if @costumer.orders.present? %>
  <div id="orders">



  <h1>Orders</h1>
  <table>
    <thead>
      <tr>
        <th> Name of Product </th>
        <th>Count</th>
        <th>Customer Id</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @costumer.orders.each do |order| %>
        <tr>
          <td><%= order.product_name %></td>
          <td><%= order.product_count %></td>
          <td><%= order.costumer_id %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>






  <%#= render @costumer.orders %>
  <% else%>
    <div>
      <h3 color="red"> This costumer has no orders currently </h3><br>
    </div>
<% end %>
